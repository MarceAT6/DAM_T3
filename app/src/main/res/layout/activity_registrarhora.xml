<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb912"
    tools:context=".vistas.registrarhora">

    <Button
        android:id="@+id/btn_salida"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:backgroundTint="#040303"
        android:text="Salida"
        android:textColor="#ffb912"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_entrada"
        app:layout_constraintVertical_bias="0.195" />

    <Button
        android:id="@+id/btn_regresar_salida"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#040303"
        android:text="Regresar"
        android:textColor="#ffb912"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_salida"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_entrada"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:backgroundTint="#040303"
        android:text="Entrada"
        android:textColor="#ffb912"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.154" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="376dp"
        android:layout_height="284dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.102"
        app:srcCompat="@drawable/upn___universidad_privada_del_norte" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="369dp"
        android:layout_height="96dp"
        android:text="Registrar Entrada o Salida"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>